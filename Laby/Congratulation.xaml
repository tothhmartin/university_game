<Window x:Class="Laby.Congratulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laby"
        mc:Ignorable="d"
        Title="Congratulation" ResizeMode="NoResize" Height="200" Width="400" WindowStartupLocation="CenterScreen" >
    <Grid x:Name="grid">
        <Button x:Name="exit" Content="Exit" Click="CloseWindow" BorderBrush="#01000000" HorizontalAlignment="Left" Margin="243,120,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Black" Height="60" Width="120" >
            <Button.Background>
                <ImageBrush ImageSource="/buttonb.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="newgame"  Content="Start new game" Click="NewGame" BorderBrush="#01000000" HorizontalAlignment="Left" Margin="36,120,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Black" Height="60" Width="120" >
            <Button.Background>
                <ImageBrush ImageSource="/buttonb.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
